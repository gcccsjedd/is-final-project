{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sentiment Analysis Input",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1000,
      "pattern": "^[^<>{}[\\]]*$"
    }
  },
  "required": ["text"],
  "additionalProperties": false
}