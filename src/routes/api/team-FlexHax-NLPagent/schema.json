{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NLP Agent Request Schema",
  "description": "Schema for validating NLP agent API requests",
  "type": "object",
  "required": ["text", "task"],
  "properties": {
    "text": {
      "type": "string",
      "description": "The text to be processed",
      "minLength": 1,
      "maxLength": 5000
    },
    "task": {
      "type": "string",
      "description": "The NLP task to perform",
      "enum": ["sentiment", "summarize", "classify", "detect-language", "extract-keywords"]
    },
    "options": {
      "type": "object",
      "description": "Optional parameters for specific tasks",
      "properties": {
        "maxLength": {
          "type": "number",
          "description": "Maximum length for summarization",
          "minimum": 1,
          "maximum": 1000
        },
        "minLength": {
          "type": "number",
          "description": "Minimum length for summarization",
          "minimum": 1,
          "maximum": 500
        },
        "categories": {
          "type": "array",
          "description": "Categories for classification",
          "items": {
            "type": "string"
          }
        },
        "keywordCount": {
          "type": "number",
          "description": "Number of keywords to extract",
          "minimum": 1,
          "maximum": 20
        }
      }
    }
  }
} 